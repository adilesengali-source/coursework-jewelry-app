<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jewelryshopapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JewelryShopApp">

        <!-- Основные активности приложения -->
        <activity android:name="com.example.jewelryshopapp.ui.catalog.AddItemScreen" />
        <activity android:name="com.example.jewelryshopapp.DetailScreen" />
        <activity android:name="com.example.jewelryshopapp.CalcScreen" android:exported="false" />
        <activity android:name="com.example.jewelryshopapp.CatalogScreen" android:exported="false" />
        <activity android:name="com.example.jewelryshopapp.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
